@model IEnumerable<Demo_CNPM.Models.Hàng_Hóa>
@{
    ViewBag.Title = "Proview";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<head>
    <style>
        /* ... Các CSS hiện có ... */

        /* CSS cho nút "Tiếp tục mua hàng" */
        .btn-tieptucmuahang {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            background-color: #1E90FF;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Hiệu ứng hover cho nút "Tiếp tục mua hàng" */
        .btn-tieptucmuahang:hover {
            background-color: #007BFF;
        }


        /* CSS cho phần giao diện của thẻ sản phẩm */
        .product-card {
            border: 1px solid #ddd; /* Viền xung quanh thẻ sản phẩm */
            padding: 10px; /* Khoảng cách giữa nội dung và viền */
            background-color: #fff; /* Màu nền của thẻ sản phẩm */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Tạo hiệu ứng đổ bóng */
            transition: box-shadow 0.3s ease; /* Thêm hiệu ứng chuyển đổi mềm mượt */
            margin-bottom: 20px; /* Điều chỉnh khoảng cách giữa các thẻ sản phẩm */
            text-align:center;
        }

            /* Hiệu ứng hover cho thẻ sản phẩm */
            .product-card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Đổi hiệu ứng đổ bóng khi hover */
            }

        .product-image {
            max-width: 100%;
            max-height: 150px; /* Điều chỉnh kích thước ảnh theo ý muốn */
            object-fit: contain; /* Căn giữa ảnh trong khung */
        }
        /* ... Các CSS hiện có ... */
    </style>
</head>
<body>

    <h2 style="">Quản Lý Bán Hàng</h2>

    <div class="container" style=" background-image:; background-repeat: no-repeat; background-size:cover">
        <h2 style="font-size:30px;color:brown;text-align:center"><b>Danh sách hàng hóa</b></h2>
        <div style="border: 3px solid #ff6a00; height: 70px; text-align: center; padding: 15px;; margin-bottom: 50px">

            @using (Html.BeginForm("Proview", "Hàng_Hóa", FormMethod.Get))
            {
                <table>

                    <td>
                        <span style="color:brown"><b> Tên Sản phẩm :</b></span> <input type="text" name="SearchString" />
                        <input type="submit" value="Tìm kiếm" class="btn btn-warning" />
                    </td>
                </table>
            }
        </div>
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="product-card">
                        <a href="/ShoppingCart/AddToCart/@pro.ID">
                            <img src="~/images/@pro.Hinh_anh" class="product-image" width="80" height="80" />
                        </a>
                        <p style="font-size:17px;color:darkorchid"><b>@Html.DisplayFor(model => pro.Tên)</b></p>
                        <p>Đơn giá : <font color="red"><i style="font-size:20px">@Html.DisplayFor(model => pro.Giá_bán) VND</i></font></p>
                    </div>
                </div>
            }
        </div>
        <div style="width: 700px; height: 400px; background-color: #ffa8B6">
            @Html.Action("ShowCart", "ShoppingCart")
        </div>
</body>