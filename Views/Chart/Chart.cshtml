<h3>Thống kế Doanh Thu</h3>
<div style="width: 30%; height: 30%">
    <canvas id="ChartDoanhThu"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const cdt = document.getelementbyid('ChartDoanhThu');

    new chart(cdt, {
        type: 'bar',
        data: {
            labels: ['01/08/2023', '02/08/2023', '03/08/2023', '04/08/2023', '05/08/2023', '06/08/2023', '07/08/2023'],
            datasets: [{
                label: 'Doanh Thu',
                data: [510000, 1000000, 450000, 150000, 45000, 60000, 300000],
                borderwidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginatzero: true
                }
            }
        }
    });
</script>


